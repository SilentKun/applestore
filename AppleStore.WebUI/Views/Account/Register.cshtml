@model AppleStore.WebUI.Models.RegisterModel

@{
    ViewBag.Title = "Register";
}
<div class="container">
    <h2  class="title-h31">Регистрация</h2>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()


       
        <ul id="auth">
            @Html.ValidationSummary()
            <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />
            <li>
                <label>Email</label><br />
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
            </li>
            <li>
                <label>Ваше имя</label><br />
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
            </li>
            <li>
                <label>Пароль</label><br />
                @Html.TextBoxFor(x => x.Password, new { @class = "form-control", @type = "password" })
            </li>
            <li>
                <label>Подтвердите пароль</label><br />
                @Html.TextBoxFor(x => x.PasswordConfirm, new { @class = "form-control", @type = "password" })
            </li>
            <p><button class="btn btn-outline-dark my-2 my-sm-0" type="submit">Зарегистрировать</button></p>
        </ul>

    }</div>


