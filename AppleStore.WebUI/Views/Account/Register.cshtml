@model AppleStore.WebUI.Models.RegisterModel

@{
    ViewBag.Title = "Регистрация";
}
<div class="container" style="min-width: 500px;max-width:500px;padding:1em;margin-top:20px;box-shadow: 1px 1px 11px 1px rgba(30, 30, 30, 0.1); background-color:#fff;">
    <h2  class="title-h31"  style="margin-left:0px">Регистрация</h2>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()


       
        <ul id="auth" style="margin: 0 auto;padding: 0;">
            @Html.ValidationSummary()
            <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />
            <li>
                <label>Email</label><br />
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
            </li>
            <li>
                <label>Ваше имя</label><br />
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
            </li>
            <li>
                <label>Пароль</label><br />
                @Html.TextBoxFor(x => x.Password, new { @class = "form-control", @type = "password" })
            </li>
            <li>
                <label>Подтвердите пароль</label><br />
                @Html.TextBoxFor(x => x.PasswordConfirm, new { @class = "form-control", @type = "password" })
            </li>
            <p><button class="btn btn-outline-dark my-2 my-sm-0" type="submit">Зарегистрировать</button></p>
        </ul>

    }</div>


