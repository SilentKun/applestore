@using AppleStore.Domain.Entities
@model IEnumerable<Gadget>
<div class="container">
    @if (@HttpContext.Current.User.Identity.IsAuthenticated)
    {
        <div class="hello">
            <p>Здравствуйте: @HttpContext.Current.User.Identity.Name</p>

        </div>
        <div class="orders">
            Ваши заказы
        </div>
        foreach (var line in Model)
        {
            <div class="cartstyles">

                <div class="img-cart">
                    <p > <img src="@Url.Action("GetImage", "Gadget", new { line.GadgetId })" alt="" class="picInBasket"></p>
                </div>
                <div class="title-cart">
                    <p> <a href="/Gadget/Details?gadgetId=@line.GadgetId">@line.Name</a> </p>
                </div>


                <div class="price-product">
                    <h5>@line.Price.ToString("# руб")</h5> <p></p>
                </div>

                <div id="bottom-cart-line">
                </div>
            </div>

        }



    }

</div>
