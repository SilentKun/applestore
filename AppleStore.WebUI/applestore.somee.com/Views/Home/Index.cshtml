@model AppleStore.WebUI.Models.CartIndexViewModel

@if (@HttpContext.Current.User.Identity.IsAuthenticated)
{
    <div>
        Здравствуйте: @HttpContext.Current.User.Identity.Name


    </div>
    <div>
        <a class="btn btn-primary" href='@Url.Action("Logout", "Account")'>Выйти из аккаунта</a>
    </div>

    foreach (var line in Model.Cart.Lines)
    {
        <tr>
            <td class="text-center">@line.Quantity</td>
            <td class="text-left">@line.Gadget.Name</td>
            <td class="text-right">@line.Gadget.Price.ToString("# руб")</td>
            <td class="text-right">
                @((line.Quantity * line.Gadget.Price).ToString("# руб"))
            </td>
        </tr>
    }
}
@if (!@HttpContext.Current.User.Identity.IsAuthenticated)
{<div>Авторизируйтесь!</div>}



